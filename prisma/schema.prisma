generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String        @id @default(uuid())
  email       String        @unique
  senha       String
  numero      String        @unique
  nome        String
  relatos     Relatos[]
  curtidas    Curtidas[]
  comentarios Comentarios[]

  @@map("Users")
}

model Relatos {
  id          String        @id @default(uuid())
  texto       String        @db.Text
  tema        String
  id_User     String
  user        Users         @relation(fields: [id_User], references: [id])
  curtidas    Curtidas[]
  comentarios Comentarios[]

  @@map("Relatos")
}

model Curtidas {
  id        String  @id @default(uuid())
  id_Relato String
  id_User   String
  relato    Relatos @relation(fields: [id_Relato], references: [id])
  user      Users   @relation(fields: [id_User], references: [id])

  @@map("Curtidas")
}

model Comentarios {
  id        String  @id @default(uuid())
  texto     String  @db.Text
  id_User   String
  id_Relato String
  user      Users   @relation(fields: [id_User], references: [id])
  relato    Relatos @relation(fields: [id_Relato], references: [id])

  @@map("Comentarios")
}
